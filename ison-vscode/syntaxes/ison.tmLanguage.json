{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ISON",
  "scopeName": "source.ison",
  "patterns": [
    { "include": "#comments" },
    { "include": "#block-header" },
    { "include": "#summary-separator" },
    { "include": "#strings" },
    { "include": "#references" },
    { "include": "#booleans" },
    { "include": "#null" },
    { "include": "#numbers" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.number-sign.ison",
      "match": "#.*$"
    },
    "block-header": {
      "name": "meta.block-header.ison",
      "match": "^\\s*(table|object|list)(\\.)(\\w+)",
      "captures": {
        "1": { "name": "keyword.control.block-type.ison" },
        "2": { "name": "punctuation.separator.ison" },
        "3": { "name": "entity.name.type.block-name.ison" }
      }
    },
    "summary-separator": {
      "name": "keyword.operator.separator.ison",
      "match": "^---$"
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ison",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ison",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.ison",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.ison",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "references": {
      "patterns": [
        {
          "name": "variable.other.reference.ison",
          "match": ":[A-Z_]+:[\\w]+",
          "captures": {
            "0": { "name": "support.type.reference.ison" }
          }
        },
        {
          "name": "variable.other.reference.simple.ison",
          "match": ":[\\w]+\\b",
          "captures": {
            "0": { "name": "support.type.reference.ison" }
          }
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.true.ison",
          "match": "\\btrue\\b"
        },
        {
          "name": "constant.language.boolean.false.ison",
          "match": "\\bfalse\\b"
        }
      ]
    },
    "null": {
      "name": "constant.language.null.ison",
      "match": "\\b(null|~)\\b"
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.ison",
          "match": "-?\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.ison",
          "match": "-?\\b\\d+\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "meta.field-typed.ison",
          "match": "(\\w+)(:)(int|float|string|bool|ref|date|datetime|uuid|json)\\b",
          "captures": {
            "1": { "name": "variable.other.field.ison" },
            "2": { "name": "punctuation.separator.type.ison" },
            "3": { "name": "storage.type.ison" }
          }
        }
      ]
    }
  }
}
